{
    "cosmos-installer": {},
    "minVersion": "0.8.0",
    "services": {
        "{ServiceName}": {
            "image": "vouu/wastebin:latest",
            "container_name": "{ServiceName}",
            "security_opt": [
                "seccomp:unconfined"
            ],
            "environment": [
                "WASTEBIN_DATABASE_PATH=/data/state.db"
            ],
            "labels": {
                "cosmos-persistent-env": "WASTEBIN_DATABASE_PATH",
                "cosmos-force-network-secured": "true",
                "cosmos-auto-update": "true",
                "cosmos-icon": "https://cosmos.manhtuong.net/servapps/Wastebin/logo/icon.png"
            },
            "volumes": [{
                "source": "{ServiceName}-data",
                "target": "/data",
                "type": "volume"
            }],
            "routes": [{
                "name": "{ServiceName}",
                "description": "Expose {ServiceName} to the web",
                "useHost": true,
                "target": "http://{ServiceName}:8088",
                "mode": "SERVAPP",
                "Timeout": 14400000,
                "ThrottlePerMinute": 12000,
                "BlockCommonBots": true,
                "SmartShield": {
                    "Enabled": true
                }
            }],
            "shm_size": "4gb",
            "restart": "unless-stopped"
        }
    }
}